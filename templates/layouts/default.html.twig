{# layouts/default.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Derafu: Data Processor - Four-Phase Data Processing Library{% endblock %}

{% block body %}
    {% block header %}
        <div id="header-container" class="sticky-top"></div>
    {% endblock %}

    {% block main %}
        <div class="container">
            <div class="row">
                <main class="col-md-9">
                    {% block content %}{% endblock %}
                </main>
                <div class="col-md-3 py-4">
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Package Info</div>
                                <span class="smal text-muted">
                                    <a href="https://github.com/derafu/data-processor" target="_blank" class="link-secondary text-decoration-none">
                                        <i class="fa-brands fa-github"></i>
                                        derafu/data-processor
                                    </a>
                                </span>
                                <div class="my-2">
                                    <img src="https://img.shields.io/github/stars/derafu/data-processor" alt="GitHub Repo stars">
                                    <img src="https://img.shields.io/github/forks/derafu/data-processor" alt="GitHub forks">
                                </div>
                            </div>
                        </li>
                        <a href="/" class="list-group-item list-group-item-action {% if request.uri.path == '/' %}active{% endif %}">
                            README
                        </a>
                    </div>
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                            <div class="fw-bold">Docs</div>
                            <span class="smal text-muted">Guides & Examples</span>
                            </div>
                        </li>
                        <a href="/rules-reference" class="list-group-item list-group-item-action {% if request.uri.path == '/rules-reference' %}active{% endif %}">
                            Rules Reference
                        </a>
                        <a href="/custom-registries" class="list-group-item list-group-item-action {% if request.uri.path == '/custom-registries' %}active{% endif %}">
                            Creating Custom Registries
                        </a>
                        <a href="/custom-rules" class="list-group-item list-group-item-action {% if request.uri.path == '/custom-rules' %}active{% endif %}">
                            Creating Custom Rules
                        </a>
                        <a href="/custom-registrar" class="list-group-item list-group-item-action {% if request.uri.path == '/custom-registrar' %}active{% endif %}">
                            Creating Custom Rule Registrar
                        </a>
                        <a href="/custom-parser" class="list-group-item list-group-item-action {% if request.uri.path == '/custom-parser' %}active{% endif %}">
                            Creating Custom Rule Parser
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        <div id="footer-container"></div>
        <script src="https://derafu.org/js/derafu.js"></script>
    {% endblock %}
{% endblock %}
